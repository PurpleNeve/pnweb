{% extends '::cp.login.html.twig' %}
{% block title %}Purple+Neve Control Panel{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Secure Area -- Authentication Required</h3>
                </div>
                <div class="panel-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.message }}</div>
                    {% endif %}
                    {{ form(login_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}