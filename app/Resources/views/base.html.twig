<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Purple+Neve{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
        <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700|Open+Sans:400,300' rel='stylesheet' type='text/css'>
        {% block css %}{% endblock %}

        <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

        <script type="text/javascript" src="//code.jquery.com/jquery.js"></script>
        <script type="text/javascript" src="{{ asset('/js/bootstrap.js') }}"></script>
        {% block javascript %}{% endblock %}
    </head>
    <body>
        <header id="site-header">
            <nav role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mc-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="index.html" class="navbar-brand"><img alt="purple+neve" src="{{ asset('bundles/frontend/images/logo.png') }}" /></a>
                    </div>
                    <div class="collapse navbar-collapse" id="mc-navbar-collapse">
                        <ul class="nav navbar-nav pull-right">
                            <li><a href="#">services</a></li>
                            <li><a href="#">clients</a></li>
                            <li><a href="#">contact</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">client login <i class="fa fa-lock"></i></a>
                                <div class="dropdown-menu client-signin">
                                     <form role="form" method="post" action="/client/auth">
                                        <div class="form-group">
                                            <input type="email" class="form-control" size="small" placeholder="Email Address" name="_username" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control" size="small" placeholder="Password" name="_password" />
                                        </div>
                                        <button type="submit" class="btn btn-default">Login</button> <span class="small pull-right">(<a href="/client/forgot">Forgot Password</a>)</span>
                                     </form>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <section id="site-body">
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </section>
        <footer id="site-footer">
            <div class="container">
                <div class="row">                       
                    <div class="col-md-12">
                        <span class="copyright pull-left">Copyright purple+neve (c) 2010-2013</span>
                        <span class="poweredby pull-right">Powered by <img alt="puppies" src="{{ asset('bundles/frontend/images/neve.png') }}" title="puppies" /></span>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
